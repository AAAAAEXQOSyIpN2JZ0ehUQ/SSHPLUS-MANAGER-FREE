;;
7)
clear
otimizar
echo -e "\n\033[1;33m Enter para retornar\033[0m"; read
sleep 1
;;
0)
echo -ne "\033[1;32m Saindo... Enter para SAIR\033[0m"; read
clear
exit
clear
;;
*)
echo -ne "\033[1;31m Opcao invalida...\033[0m"; read
sleep 1
ok
;;
esac
done

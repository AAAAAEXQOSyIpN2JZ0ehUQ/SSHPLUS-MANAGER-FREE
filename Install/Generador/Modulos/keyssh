echo -e "\033[1;33mâ‡± SCRIPT SSHPLUS MANAGER â‡²    \033[0m"
echo -e "\033[0;34m============================"
echo ""
echo -e "\033[1;37mwget $IP/scripts/Plus; chmod 777 Plus; ./Plus"
echo ""
echo -e "\033[1;32mKEY: \033[1;37m$key1p$signus$key2p\033[0m"
echo ""
#echo -e "\033[0;34m============================"
#echo -e "\033[1;33mTUTORIAL DE INSTALAÃ‡ÃƒO !    \033[0m"

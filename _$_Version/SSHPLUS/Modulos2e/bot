#Exibe informacoes e comandos
ajuda ()
{
	local env_msg
    env_msg="â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n"
    env_msg+="<b>BEM VINDO(a) AO BOT SSHPLUS !</b>\n"
    env_msg+="â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n"
    env_msg+="<i>Comandos Disponiveis</i>\n\n"
    env_msg+="â—/criarusuario = Cria usuario com senha\n\n"
    env_msg+="â—/criarusuario_key = Cria usuario com key\n\n"
    env_msg+="â—/remover = Deleta usuario com senha\n\n"
    env_msg+="â—/remover_key = Deleta usuario com key\n\n"
    env_msg+="â—/infousers = Exibe informacoes dos usuarios\n\n"
    env_msg+="â—/monitor = Exibe usuÃ¡rios Onlines\n\n"
    env_msg+="â—/infovps = Exibe informacoes sobre o vps\n\n"
    env_msg+="â—/alterarsenha = Muda senha do usuario\n\n"
    env_msg+="â—/alterarlimite = Muda o limite do usuario\n\n"
    env_msg+="â—/alterardata = Muda data do usuario\n\n"
    env_msg+="â—/backup = Cria backup dos usuarios\n\n"
    env_msg+="â—/otimizar = Limpa a memoria ram\n\n"
    env_msg+="â—/speedtest = Executa o teste de velocidade\n\n"
    env_msg+="â—/payload_vivo = Exibe Payload vivo\n\n"
    env_msg+="â—/payload_oi = Exibe Payload oi\n\n"
